{
  "name": "@osm-code/osmose-request",
  "description": "Request the Osmose API from Javascript, with promises :)",
  "version": "1.1.1",
  "homepage": "https://github.com/osm-code/osmose-request/",
  "repository": "https://github.com/osm-code/osmose-request/",
  "bugs": "https://github.com/osm-code/osmose-request/issues",
  "author": "Guillaume Amat <guillaume@amat.io>",
  "license": "MIT",
  "keywords": [
    "osm",
    "openstreetmap",
    "osmose",
    "osmose-qa",
    "qa",
    "request",
    "api"
  ],
  "main": "dist/OsmoseRequest.js",
  "scripts": {
    "watch": "webpack -w --progress",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "precommit": "lint-staged",
    "test": "jest --env=jsdom",
    "test-watch": "npm test -- --watch",
    "test-ci": "npm test -- --ci",
    "test-coverage": "npm run test-ci -- --coverage",
    "test-prettier": "prettier --single-quote --list-different 'src/**/*.{js,json}'",
    "lint": "eslint 'src/**/*.{js,json}'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/requests.js",
      "<rootDir>/node_modules/"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --single-quote --write",
      "eslint",
      "git add"
    ],
    "src/**/*.js": [
      "jest --ci --findRelatedTests",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-json": "^1.2.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "cross-fetch": "^1.1.1"
  }
}
